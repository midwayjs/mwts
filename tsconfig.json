{
  "extends": "./tsconfig-midway.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": [
    "eslint.config.js",
    "eslint.ignores.js",
    "src/**/*.js",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["test/fixtures/**/*.*", "template/**/*.*"]
}
